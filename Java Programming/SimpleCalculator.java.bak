import java.util.Scanner;
class SimpleCalculator
{
	public static void main(String[] args) 
	{
		Scanner sc = new Scanner(System.in);
		System.out.printl("Enter the number one:");
		int n1 = sc.nextInt();
		System.out.print("Enter the number two:");
		int n2 = sc.nextInt();
		System.out.print("Enter the arthematic operation:");
		char op = sc.next().charAt(0);
		if(op=='+')
		{
			System.out.print("sum of two numbers:"+(n1+n2));
		}
		else if(op=='-')
		{
			System.out.print("subtract two numbers:"+(n1-n2));
		}
		else if(op=='%')
		{
			System.out.print("remainder of the number:"+(n1%n2));
		}
		else if(op=='/')
		{
			System.out.print("quotient of the number:"+(n1/n2));
		}
		
	}
}
